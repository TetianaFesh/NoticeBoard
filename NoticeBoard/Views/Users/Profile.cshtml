@model Entities.Model.User

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Surname)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a role="button" class="btn btn-warning" asp-controller="Notices" asp-action="MyNotices" asp-route-id="@Model.Id">My notices</a>
    <a role="button" class="btn btn-warning" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Id">Edit my profile</a>
    <a role="button" class="btn btn-warning" asp-controller="Notices" asp-action="Index">Back to Notice List</a>
</div>
